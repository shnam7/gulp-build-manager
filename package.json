{
  "name": "gulp-build-manager",
  "version": "3.0.6",
  "description": "Easy to use, flexible gulp task manager",
  "files": [
    "lib",
    "!**/*.map"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "watch": "watch \"npm run build\" src",
    "docs-build": "gulp --cwd docs",
    "docs-clean": "gulp --cwd docs @clean",
    "ex-build": "npm run gulp @ex-build-all",
    "ex-clean": "npm run gulp @ex-clean-all",
    "build-all": "npm run build && npm run gulp-build",
    "clean-all": "npm run gulp-clean && npm run clean",
    "test": "npm run build && mocha --reporter spec && npm run gulp-test",
    "prepare": "npm run clean && npm run build",
    "prepare-to-commit": "npm run clean && npm run build && npm run docs-build && npm run ex-clean ",
    "npm-dry-run": "npm publish --dry-run",
    "gulp": "gulp",
    "gulp-build": "npm run gulp @build",
    "gulp-clean": "npm run gulp @clean",
    "gulp-test": "npm run gulp-build && npm run gulp-clean",
    "--deprecated-build-babel": "babel src --presets env --out-dir lib",
    "--deprecated-test-babel": "mocha --require babel-core/register --reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shnam7/gulp-build-manager"
  },
  "keywords": [
    "gulp",
    "build",
    "builder",
    "babel",
    "es6",
    "sass",
    "scss",
    "postcss",
    "twig",
    "coffeescript",
    "typescript",
    "markdown",
    "panini",
    "webpack"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shnam7/gulp-build-manager/issues"
  },
  "homepage": "https://github.com/shnam7/gulp-build-manager#readme",
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "del": "^3.0.0",
    "glob": "^7.1.2",
    "upath": "^1.1.0"
  },
  "peerDependencies": {
    "gulp": "^4.0.0"
  },
  "devDependencies": {
    "@types/browser-sync": "0.0.40",
    "@types/del": "^3.0.1",
    "@types/glob": "^5.0.35",
    "@types/gulp": "^4.0.5",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.4",
    "chai": "^4.1.2",
    "gulp": "^4.0.0",
    "gulp-babel": "^7.0.1",
    "gulp-clone": "^2.0.1",
    "gulp-coffee": "^3.0.2",
    "gulp-coffeelint": "^0.6.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-eslint": "^4.0.2",
    "gulp-filter": "^5.1.0",
    "gulp-html-prettify": "^0.0.1",
    "gulp-htmlmin": "^4.0.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-less": "^4.0.0",
    "gulp-livereload": "^3.8.1",
    "gulp-markdown": "^2.0.1",
    "gulp-order": "^1.1.1",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.2.3",
    "gulp-sass": "^4.0.1",
    "gulp-tslint": "^8.1.3",
    "gulp-twig": "^1.2.0",
    "gulp-typescript": "^4.0.2",
    "gulp-uglify-es": "^1.0.4",
    "gulp-zip": "^4.1.0",
    "lost": "^8.2.1",
    "mocha": "^5.2.0",
    "panini": "^1.6.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-reporter": "^5.0.0",
    "postcss-utilities": "^0.8.0",
    "stylelint": "^9.2.1",
    "ts-loader": "^4.3.1",
    "tslint": "^5.10.0",
    "tslint-eslint-rules-recommended": "^1.1.0",
    "tslint-loader": "^3.6.0",
    "twig-markdown": "^0.1.2",
    "typescript": "^2.9.1",
    "uglify-es": "^3.3.10",
    "webpack": "^4.11.1",
    "webpack-stream": "^4.0.3"
  }
}
