{
    "name": "gulp-build-manager",
    "version": "4.0.0-alpha.1",
    "description": "Easy to use, flexible gulp task manager",
    "files": [
        "lib",
        "!**/*.map"
    ],
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc -p src",
        "clean": "rimraf lib",
        "watch-tsc": "tsc -p src --watch",
        "test": "mocha --reporter spec",
        "prepare": "npm run clean && npm run build",
        "prepare-to-commit": "npm run prepare && npm run test && npm run clean",
        "npm-dry-run": "npm publish --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shnam7/gulp-build-manager"
    },
    "keywords": [
        "gulp",
        "build",
        "builder",
        "babel",
        "es6",
        "sass",
        "scss",
        "postcss",
        "twig",
        "coffeescript",
        "typescript",
        "markdown",
        "panini",
        "webpack"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/shnam7/gulp-build-manager/issues"
    },
    "homepage": "https://github.com/shnam7/gulp-build-manager#readme",
    "dependencies": {
        "autoprefixer": "^9.7.4",
        "chalk": "^3.0.0",
        "del": "^5.1.0",
        "glob": "^7.1.6",
        "gulp-clone": "^2.0.1",
        "gulp-concat": "^2.6.1",
        "gulp-filter": "^6.0.0",
        "gulp-order": "^1.2.0",
        "gulp-postcss": "^8.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sourcemaps": "^2.6.5",
        "upath": "^1.2.0"
    },
    "devDependencies": {
        "@types/gulp": "^4.0.6",
        "@types/gulp-filter": "^3.0.33",
        "chai": "^4.2.0",
        "gulp": "^4.0.2",
        "mocha": "^7.1.0",
        "typescript": "^3.8.3"
    }
}
