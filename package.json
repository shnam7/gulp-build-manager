{
    "name": "gulp-build-manager",
    "version": "4.0.0-alpha.1",
    "description": "Easy to use, flexible gulp task manager",
    "files": [
        "lib",
        "!**/*.map"
    ],
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc -p src",
        "clean": "rimraf lib",
        "watch": "tsc -p src --watch",
        "docs-build": "gulp docs:@build",
        "docs-clean": "gulp docs:@clean",
        "docs-watch": "gulp docs:@watch",
        "ex-build": "gulp @ex-build-all",
        "ex-clean": "gulp @ex-clean-all",
        "build-all": "npm run build && gulp @build-all",
        "clean-all": "gulp @clean-all && npm run clean",
        "test": "npm run build && mocha --reporter spec && npm run gulp-test",
        "prepare": "npm run clean && npm run build",
        "prepare-to-commit": "npm run prepare && npm run build-all && npm run ex-clean ",
        "npm-dry-run": "npm publish --dry-run",
        "--deprecated-build-babel": "babel src --presets env --out-dir lib",
        "--deprecated-test-babel": "mocha --require babel-core/register --reporter spec"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shnam7/gulp-build-manager"
    },
    "keywords": [
        "gulp",
        "build",
        "builder",
        "babel",
        "es6",
        "sass",
        "scss",
        "postcss",
        "twig",
        "coffeescript",
        "typescript",
        "markdown",
        "panini",
        "webpack"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/shnam7/gulp-build-manager/issues"
    },
    "homepage": "https://github.com/shnam7/gulp-build-manager#readme",
    "dependencies": {
        "autoprefixer": "^9.7.4",
        "chalk": "^3.0.0",
        "del": "^5.1.0",
        "glob": "^7.1.6",
        "gulp-clone": "^2.0.1",
        "gulp-concat": "^2.6.1",
        "gulp-filter": "^6.0.0",
        "gulp-order": "^1.2.0",
        "gulp-postcss": "^8.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sourcemaps": "^2.6.5",
        "upath": "^1.2.0"
    },
    "peerDependencies": {
        "gulp": "^4.0.2"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/gulp": "^4.0.6",
        "@types/gulp-filter": "^3.0.33",
        "@types/jquery": "^3.3.33",
        "babel-core": "^6.26.3",
        "babel-preset-env": "^1.7.0",
        "browser-sync": "^2.26.7",
        "chai": "^4.2.0",
        "gulp": "^4.0.2",
        "gulp-babel": "^8.0.0",
        "gulp-clean-css": "^4.2.0",
        "gulp-coffee": "^3.0.3",
        "gulp-coffeelint": "^0.6.0",
        "gulp-data": "^1.3.1",
        "gulp-debug": "^4.0.0",
        "gulp-eslint": "^6.0.0",
        "gulp-html-prettify": "^0.0.1",
        "gulp-htmlmin": "^5.0.1",
        "gulp-imagemin": "^7.1.0",
        "gulp-less": "^4.0.1",
        "gulp-markdown": "^5.0.1",
        "gulp-rtlcss": "^1.4.1",
        "gulp-sass": "^4.0.2",
        "gulp-stylelint": "^13.0.0",
        "gulp-tslint": "^8.1.4",
        "gulp-twig": "^1.2.0",
        "gulp-typescript": "^5.0.1",
        "gulp-uglify-es": "^2.0.0",
        "gulp-zip": "^5.0.1",
        "lost": "^8.3.1",
        "mocha": "^7.1.0",
        "panini": "^1.6.3",
        "postcss-combine-duplicated-selectors": "^8.1.0",
        "postcss-inline-svg": "^4.1.0",
        "postcss-preset-env": "6.7.0",
        "postcss-reporter": "^6.0.1",
        "postcss-utilities": "^0.8.4",
        "sass-wdk": "github:shnam7/sass-wdk#dev",
        "stylelint": "^13.2.1",
        "stylelint-config-recommended": "^3.0.0",
        "ts-loader": "^6.2.1",
        "tslint": "^6.1.0",
        "tslint-eslint-rules-recommended": "^1.2.2",
        "twig-markdown": "^0.2.1",
        "typescript": "^3.8.3",
        "webpack": "^4.42.0",
        "wicle": "github:shnam7/wicle#dev"
    }
}
