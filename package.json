{
    "name": "gulp-build-manager",
    "version": "4.1.0",
    "description": "Easy to use, flexible gulp task manager",
    "files": [
        "lib",
        "!**/*.map"
    ],
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc -p src",
        "clean": "rimraf lib",
        "rebuild": "npm run clean && npm run build",
        "watch": "tsc -p src --watch",
        "test": "mocha test --reporter spec",
        "prepare-to-commit": "npm run rebuild && npm run test",
        "npm-dry-run": "npm publish --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shnam7/gulp-build-manager"
    },
    "keywords": [
        "gulp",
        "build",
        "builder",
        "babel",
        "es6",
        "sass",
        "scss",
        "postcss",
        "twig",
        "coffeescript",
        "typescript",
        "markdown",
        "panini",
        "webpack"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/shnam7/gulp-build-manager/issues"
    },
    "homepage": "https://github.com/shnam7/gulp-build-manager#readme",
    "dependencies": {
        "chalk": "^4.1.0",
        "del": "^5.1.0",
        "rimraf": "^3.0.2",
        "upath": "^1.2.0"
    },
    "peerDependencies": {
        "gulp": "^4.0.2"
    },
    "devDependencies": {
        "@types/gulp": "^4.0.6",
        "@types/gulp-filter": "^3.0.33",
        "chai": "^4.2.0",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2"
    }
}
