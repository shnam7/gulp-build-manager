{
  "name": "gulp-build-manager",
  "version": "2.0.1",
  "description": "Easy to use, flexible gulp task manager",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "watch": "watch \"npm run build\" src",
    "docs:build": "gulp --cwd docs",
    "docs:clean": "rimraf _gh_pages docs/.jekyll-metadata",
    "test": "mocha --reporter spec",
    "build-all": "npm run build && npm run test && npm run docs:build",
    "clean-all": "npm run clean && npm run docs:clean",
    "prepare": "npm run clean && npm run build",
    "--deprecated-build-babel": "babel src --presets env --out-dir lib",
    "--deprecated-test-babel": "mocha --require babel-core/register --reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shnam7/gulp-build-manager"
  },
  "keywords": [
    "gulp",
    "build",
    "builder",
    "babel",
    "es6",
    "sass",
    "scss",
    "postcss",
    "twig",
    "coffeescript",
    "typescript",
    "markdown",
    "panini",
    "webpack"
  ],
  "author": "Robin Soo-hyuk Nam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shnam7/gulp-build-manager/issues"
  },
  "homepage": "https://github.com/shnam7/gulp-build-manager#readme",
  "peerDependencies": {
    "gulp": ">=4.0"
  },
  "dependencies": {
    "del": "^3.0.0",
    "glob": "^7.1.2",
    "upath": "^1.0.4"
  },
  "devDependencies": {
    "@types/deepmerge": "^1.3.3",
    "@types/del": "^3.0.0",
    "@types/glob": "^5.0.35",
    "@types/gulp": "^4.0.5",
    "chai": "^4.1.2",
    "deepmerge": "^2.0.1",
    "gulp-cssnano": "^2.1.2",
    "gulp-filter": "^5.1.0",
    "gulp-imagemin": "^4.1.0",
    "gulp-livereload": "^3.8.1",
    "gulp-postcss": "^7.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-typescript": "^4.0.1",
    "gulp-uglify": "^3.0.0",
    "mocha": "^5.0.1",
    "typescript": "^2.7.2",
    "watch": "^1.0.2",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^7.0.1",
    "gulp-coffee": "^3.0.2",
    "gulp-coffeelint": "^0.6.0",
    "gulp-concat": "^2.6.1",
    "gulp-debug": "^3.2.0",
    "gulp-eslint": "^4.0.2",
    "gulp-html-prettify": "0.0.1",
    "gulp-htmlclean": "^2.7.20",
    "gulp-less": "^4.0.0",
    "gulp-markdown": "^2.0.1",
    "gulp-order": "^1.1.1",
    "gulp-twig": "^1.2.0",
    "gulp-zip": "^4.1.0",
    "lost": "^8.2.1",
    "panini": "^1.6.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-reporter": "^5.0.0",
    "postcss-utilities": "^0.8.0",
    "stylelint": "^9.1.1",
    "twig-markdown": "^0.1.2",
    "webpack-stream": "^4.0.2"
  }
}
