{
    "name": "gulp-build-manager",
    "version": "4.0.0-alpha.1",
    "description": "Easy to use, flexible gulp task manager",
    "files": [
        "lib",
        "!**/*.map"
    ],
    "main": "lib/index.js",
    "scripts": {
        "12": "gulp 12-styles:@build && gulp 13-scripts:@build",
        "build": "tsc -p src",
        "clean": "rimraf lib",
        "rebuild": "npm run clean && npm install",
        "watch": "tsc -p src --watch",
        "docs-build": "gulp docs:@build",
        "docs-clean": "gulp docs:@clean",
        "docs-watch": "gulp docs:@watch",
        "ex-build": "gulp @ex-build-all",
        "ex-clean": "gulp @ex-clean-all",
        "test": "npm run build && mocha --reporter spec && npm run gulp-test",
        "prepare": "npm run clean && npm run build",
        "prepare-to-commit": "npm run clean && npm run build && gulp @clean-all && gulp @build-all && gulp @clean-to-prepare",
        "prepare-to-commit2": "gulp @clean-all && gulp @build-all && gulp @clean-to-prepare",
        "npm-dry-run": "npm publish --dry-run",
        "--deprecated-build-babel": "babel src --presets env --out-dir lib",
        "--deprecated-test-babel": "mocha --require babel-core/register --reporter spec"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shnam7/gulp-build-manager"
    },
    "keywords": [
        "gulp",
        "build",
        "builder",
        "babel",
        "es6",
        "sass",
        "scss",
        "postcss",
        "twig",
        "coffeescript",
        "typescript",
        "markdown",
        "panini",
        "webpack"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/shnam7/gulp-build-manager/issues"
    },
    "homepage": "https://github.com/shnam7/gulp-build-manager#readme",
    "dependencies": {
        "chalk": "^4.0.0",
        "del": "^5.1.0",
        "upath": "^1.2.0"
    },
    "peerDependencies": {
        "gulp": "^4.0.2"
    },
    "devDependencies": {
        "@types/gulp": "^4.0.6",
        "@types/gulp-filter": "^3.0.33",
        "gulp": "^4.0.2",
        "typescript": "^3.8.3"
    }
}
